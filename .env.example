# Azure Configuration
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_SUBSCRIPTION_ID=your-subscription-id-here

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO

# PostgreSQL Configuration (defaults)
POSTGRES_DEFAULT_PORT=5432
POSTGRES_SSL_MODE=require

# AKS and Container Registry Configuration
ACR_NAME=your-acr-container
AKS_CLUSTER=your-aks-cluster-name
AKS_RESOURCE_GROUP=your-resource-group-here
IMAGE_TAG=latest
NAMESPACE=default
HELM_RELEASE_NAME=your-helm-release-name

# Authentication Configuration
AUTH_SECRET_KEY=your-secret-key-here-generate-a-secure-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ADMIN_USERNAME=admin
ADMIN_PASSWORD=azure-day2-admin